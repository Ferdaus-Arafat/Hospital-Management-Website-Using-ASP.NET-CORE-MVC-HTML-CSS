@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
<div class="login_parent">
    <div class="login_left">
        A smarter Hospital Towards More Accessable Care for All
    </div>
        <section class="login_right">
        <h3>LOGIN</h3>
        <i class="fa-solid fa-user"></i>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" role="alert"></div>
                <div>
                    <input asp-for="Input.Email"  autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" ></span>
                </div>
                <div>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit">Log in</button>
                </div>
                <div>
                    <p class="loginf">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="loginf">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
