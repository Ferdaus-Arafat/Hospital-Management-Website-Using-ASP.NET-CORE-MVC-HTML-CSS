@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 style="color:white">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="login_left" style="text-align:center;margin-left: 0px; padding:40px 100px; background-color:rgba(240, 180, 255, 0.4);">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly"role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username"placeholder="Please choose your username." disabled />
            </div>
            <div>
                <input asp-for="Input.PhoneNumber" class="whitep" style="background-color: rgba(0, 0, 0, 0.4); border:none; border-bottom: solid  black;" placeholder="Please enter your phone number." />
                <span asp-validation-for="Input.PhoneNumber"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
