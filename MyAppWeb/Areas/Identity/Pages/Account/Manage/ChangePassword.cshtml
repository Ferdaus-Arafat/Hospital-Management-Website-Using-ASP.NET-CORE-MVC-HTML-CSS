@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 style="color:white">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="login_left" style="text-align:center;margin-left: 0px; padding:40px 100px; background-color:rgba(240, 180, 255, 0.4);">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" role="alert"></div>
            <div >
                <input asp-for="Input.OldPassword" style="background-color: rgba(0, 0, 0, 0.4); border:none; border-bottom: solid  black" autocomplete="current-password" aria-required="true" placeholder="Enter your old password." />
                <span asp-validation-for="Input.OldPassword" ></span>
            </div>
            <div >
                <input asp-for="Input.NewPassword" style="background-color: rgba(0, 0, 0, 0.4); border:none; border-bottom: solid  black" autocomplete="new-password" aria-required="true" placeholder="Enter new password." />
                <span asp-validation-for="Input.NewPassword"></span>
            </div>
            <div >
                <input asp-for="Input.ConfirmPassword" style="background-color:rgba(0, 0, 0, 0.4); border:none; border-bottom: solid  black" autocomplete="new-password" aria-required="true" placeholder="Confirm new password." />
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
